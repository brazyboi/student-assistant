{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@student-assistant/shared": ["../../shared/src"]
    },
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "verbatimModuleSyntax": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
